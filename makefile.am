EXECUTABLE = dedeploy


.PHONY: all clean yaml

all: clean $(EXECUTABLE)

clean:
	rm -rf objs

$(EXECUTABLE):
	mkdir -p objs
	gcc `pkg-config --cflags libconfig` -Wall src/main.c -o objs/$(EXECUTABLE) $(LIB) $(LDFLAGS) `pkg-config --libs libconfig`

test:
	./objs/$(EXECUTABLE) -h

install:
	cp objs/$(EXECUTABLE) /usr/local/bin/$(EXECUTABLE)
